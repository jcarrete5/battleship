<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.jcarrete.battleship.client.scene.GameScene$GameSceneController">
   <center>
      <Canvas height="600.0" width="400.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="100.0" spacing="25.0">
         <children>
            <Label fx:id="turnIndicator" text="&lt;turnIndicator&gt;" textAlignment="CENTER" wrapText="true" />
            <Button mnemonicParsing="false" text="Fire!" />
            <VBox fx:id="notificationsBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <left>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0">
         <children>
            <Button prefHeight="40.0" prefWidth="80.0" text="Carrier">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button prefHeight="40.0" prefWidth="80.0" text="Battleship">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button prefHeight="40.0" prefWidth="80.0" text="Cruiser">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button prefHeight="40.0" prefWidth="80.0" text="Submarine">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button prefHeight="40.0" prefWidth="80.0" text="Destroyer">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="80.0" text="Random">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
